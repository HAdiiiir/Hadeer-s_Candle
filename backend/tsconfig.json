{
    "compilerOptions": {
      "target": "ES2020",
      "module": "CommonJS",
      "moduleResolution": "Node",
      "esModuleInterop": true,
      "strict": true,
      "outDir": "dist",
      "sourceMap": true,
      "declaration": true,
      "rootDir": ".",
      "baseUrl": ".",
      "paths": {
        "*": ["node_modules/*"]
      },
      "typeRoots": ["./node_modules/@types", "./src/types"],
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*", "server.ts"],
    "exclude": ["node_modules", "dist"]
  }
  
  